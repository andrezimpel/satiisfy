<%= render "projects/header", project: @project %>

<% unless @questions.empty? %>

<div class="questions-listing">
    <% @questions.each do |question| %>


      <div class="question">
        <div class="question-title">
          <%= link_to question.title, question %>
          <% if question.active? %>
            <i class="fa fa-globe"></i>
          <% end %>
        </div>

        <div class="question-meta">
          <span data-livestamp="<%= question.created_at.to_i %>"></span><br>
        </div>

        <div class="question-actions">
          <%= link_to "Edit", edit_project_question_path(question.project, question) %>
          <%= link_to "Delete", question, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>


    <% end %>
  </div>

<% else %>
  <p class="lead">This project is empty. <%= link_to "Add", new_project_question_path(@project) %> a Question now.</p>
<% end %>

<% content_for "sidebar" do %>
  <%= link_to "<i class='fa fa-plus'></i> Question".html_safe, new_project_question_path(@project), class: "btn btn-primary" %>
  <br><br>
  <%= render "layouts/activity_box", resource: @project %>
<% end %>

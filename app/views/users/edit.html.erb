<div class="page-header">
  <h1>Edit your profile</h1>
</div>


<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :position %>
    <%= f.input :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update profile" %>
  </div>
<% end %>

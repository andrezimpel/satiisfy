<div class="page-header">
  <h2>Sign in to <a href="/">Satiisfy</a></h2>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, label: false, placeholder: "Login" %>
    <%= f.input :password, :required => false, label: false, placeholder: "Password" %>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <label>
          <%= f.input :remember_me, :as => :boolean, label: false %> Remember me
        </label>
      </div>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in", class: "btn-primary btn-lg" %>
  </div>
<% end %>

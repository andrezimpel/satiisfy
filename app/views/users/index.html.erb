<div class="page-header">
  <h1>Team <small>(<%= @users.count %>)</small></h1>
</div>


<div class="users-listing">
  <% @users.each do |user| %>
    <div class="users-listing-item">

        <a class="pull-left" href="<%= url_for user %>">
          <img class="media-object avatar" src="<%= user.avatar %>" alt="<%= user.fullname %>" title="<%= user.fullname %>" width="75">
          <% if user.is_active? %>
            <span class="label label-info">active</span>
          <% else %>
            <span class="label label-default">invited</span>
          <% end %>
        </a>
        <div class="media-body">
          <h4><%= link_to user.fullname, user %></h4>
          <p><i class="fa fa-briefcase"></i> <%= user.position if user.position %></p>
        </div>
    </div>
  <% end %>
</div>




<% content_for "sidebar" do %>
  <%= link_to "Invite Member".html_safe, new_user_invitation_path, class: "btn btn-primary" %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title><%=@current_account.title %> - Satiisfy</title>
    <%= stylesheet_link_tag    "backend/application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <header>
      <%= render 'layouts/navbar' %>
    </header>


    <section id="page" class="page-wrapper">
      <aside class="page-sidebar">
        <%= render 'layouts/backend/sidebar' %>
      </aside>

      <div class="page-content">
        <%#= render 'layouts/alerts' %>
        <%#= yield %>

        <%#= render 'layouts/shared/footer' %>
      </div>
    </section>
  </body>
</html>
